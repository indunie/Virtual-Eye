<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="horizontal">

    <virtualeye.virtual.main.MjpegView
    	android:id="@+id/surfaceView1"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
    </virtualeye.virtual.main.MjpegView>
	<LinearLayout 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_gravity="bottom"
	   	>
	    <LinearLayout 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	        <Button 
	            android:layout_width="60dp"
	    		android:layout_height="60dp"
	    		android:text="1"
	    		android:id="@+id/b1"
	            />
	        <Button 
	            android:layout_width="60dp"
	    		android:layout_height="60dp"
	    		android:id="@+id/b2"
	    		android:background="@drawable/up"
	            />
	        <Button 
	            android:layout_width="60dp"
	    		android:layout_height="60dp"
	    		android:text="3"
	    		android:id="@+id/b3"
	            />
	    </LinearLayout>
	    <LinearLayout 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	        <Button 
	            android:layout_width="60dp"
	    		android:layout_height="60dp"
	    		android:id="@+id/b4"
	    		android:background="@drawable/left"
	            />
	        <Button 
	            android:layout_width="60dp"
	    		android:layout_height="60dp"
	    		android:text="5"
	    		android:id="@+id/b5"
	            />
	        <Button 
	            android:layout_width="60dp"
	    		android:layout_height="60dp"
	    		android:id="@+id/b6"
	    		android:background="@drawable/right"
	            />
	    </LinearLayout>
	    <LinearLayout 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	        <Button 
	            android:layout_width="60dp"
	    		android:layout_height="60dp"
	    		android:text="7"
	    		android:id="@+id/b7"
	            />
	        <Button 
	            android:layout_width="60dp"
	    		android:layout_height="60dp"
	    		android:id="@+id/b8"
	    		android:background="@drawable/down"
	            />
	        <Button 
	            android:layout_width="60dp"
	    		android:layout_height="60dp"
	    		android:text="9"
	    		android:id="@+id/b9"
	            />
	    </LinearLayout>    
   </LinearLayout>
   <LinearLayout 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_gravity="bottom|right"
	    android:padding="25dp"
	   	>
	    <LinearLayout 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	        <Button 
	            android:layout_width="60dp"
	    		android:layout_height="60dp"
	    		android:text="Left"
	    		android:id="@+id/bl"
	            />
	        <Button 
	            android:layout_width="60dp"
	    		android:layout_height="60dp"
	    		android:text="Right"
	    		android:id="@+id/br"
	            />
	    </LinearLayout>    
   </LinearLayout>

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical" >

	    <ImageView
	        android:id="@+id/topright"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:clickable="true"
	        android:onClick="Hello"
	        android:src="@drawable/topright" />

	    <ImageView
	        android:id="@+id/topleft"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/topright"
	        android:clickable="true"
	        android:onClick="Hello"
	        android:src="@drawable/topleft" />

	    <ImageView
	        android:id="@+id/bottomright"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@id/topright"
	        android:clickable="true"
	        android:onClick="Hello"
	        android:src="@drawable/bottomright" />

	    <ImageView
	        android:id="@+id/bottomleft"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/topleft"
	        android:layout_toLeftOf="@id/bottomright"
	        android:clickable="true"
	        android:onClick="Hello"
	        android:src="@drawable/bottomleft" />
	</RelativeLayout>
 
</FrameLayout>